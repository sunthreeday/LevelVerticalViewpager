<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/title_bar_rl"
    android:layout_width="match_parent"
    android:layout_height="@dimen/space_50"
    android:layout_marginTop="@dimen/space_20"
    android:background="@color/transparent"
    android:orientation="horizontal">

    <!--返回箭头-->
    <ImageButton
        android:id="@+id/iv_back_icon"
        android:layout_width="@dimen/space_22"
        android:layout_height="@dimen/space_22"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/space_20"
        android:background="@null"
        android:contentDescription="@null" />

    <!--中间标题-->
    <TextView
        android:id="@+id/tv_title_middle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:ellipsize="end"
        android:maxEms="8"
        android:singleLine="true"
        android:textSize="@dimen/font_size_18" />

    <!--左侧图标-->
    <ImageButton
        android:id="@+id/iv_left_icon"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/iv_back_icon"
        android:background="@null"
        android:scaleType="center"
        android:visibility="gone" />

    <!--左侧文字-->
    <TextView
        android:id="@+id/tv_title_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/space_10"
        android:layout_toRightOf="@id/iv_back_icon"
        android:textSize="@dimen/font_size_18" />
    <!--右侧文字-->
    <TextView
        android:id="@+id/tv_title_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/space_20"
        android:textSize="@dimen/font_size_18" />
    <!--右侧第一个图标-->
    <ImageButton
        android:id="@+id/right_one_icon"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/space_20"
        android:background="@null"
        android:scaleType="center" />

    <!--右侧第二个图标-->
    <ImageButton
        android:id="@+id/right_two_icon"
        android:layout_width="@dimen/space_22"
        android:layout_height="@dimen/space_22"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/space_70"
        android:layout_toLeftOf="@id/right_one_icon"
        android:background="@null"
        android:scaleType="center" />

</RelativeLayout>