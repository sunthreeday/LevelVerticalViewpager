<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/space_40">

        <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            app:cardCornerRadius="@dimen/space_8"
            app:cardUseCompatPadding="true">

            <ImageView
                android:id="@+id/iv_case"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="@dimen/space_8"
                app:cardUseCompatPadding="true"
                android:scaleType="centerCrop" />

        </android.support.v7.widget.CardView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/space_20"
        android:layout_marginRight="@dimen/space_20"
        android:layout_marginBottom="@dimen/space_20"
        android:background="@drawable/in_white_circle_bg">

        <TextView
            android:id="@+id/case_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:singleLine="true"
            android:layout_marginTop="@dimen/space_15"
            android:textColor="@color/trnine_black_color"
            android:textSize="@dimen/font_size_21" />

        <TextView
            android:id="@+id/type_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/case_name"
            android:singleLine="true"
            android:textColor="@color/trnine_black_color"
            android:textSize="@dimen/font_size_18"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/space_8"
            android:layout_marginTop="@dimen/space_12" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/type_name"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/space_10"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/design_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/treight_black_color"
                android:textSize="@dimen/font_size_14" />

            <ImageView
                android:id="@+id/design_level"
                android:layout_toRightOf="@id/design_name"
                android:layout_width="@dimen/space_73"
                android:layout_height="@dimen/space_11"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/space_7"
                android:visibility="visible"/>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>